@code{

    public class GamesController : Controller
    {
        private static List<Game> AllGames = new List<Game>
        {
            new Game { GameID = 1, Title = "Бункер", Category = "board" },
            new Game { GameID = 2, Title = "Детективные истории: Последний рейс Гаттардо", Category = "board" },
            new Game { GameID = 3, Title = "Minecraft", Category = "pc" },
            new Game { GameID = 4, Title = "The Witcher 3", Category = "pc" }
        };

        public IActionResult Index(string category)
        {
            var games = string.IsNullOrEmpty(category) || category == "all"
                ? AllGames
                : AllGames.Where(g => g.Category == category).ToList();

            ViewBag.SelectedCategory = category;
            return View(games);
        }

    }

